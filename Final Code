tft.print("POT");
  
  
  //tft.fillRoundRect(200,75,84,84,10,BLUE);
  
  
  }
void loop() {
  digitalWrite(13,HIGH);            // touch code 
 TSPoint p= ts.getPoint();
 digitalWrite(13,LOW);


pinMode(XM,OUTPUT);
pinMode(YP,OUTPUT);
p.x = map(p.x, TS_MINX, TS_MAXX, 0,tft.height());
  p.y = map(p.y, TS_MINY, TS_MAXY, 0, tft.width());
 
  int y_set = map(p.x, 0, 240, 0, tft.height());
  int x_set = map(tft.width() - p.y, 0, 320, 0, tft.width());
if (p.z >MINPRESSURE && p.z< MAXPRESSURE) {

//remove below notes to check calibration points in arduino
/*Serial.print("X=");
Serial.println(p.x);
Serial.print("Y=");
Serial.println(p.y);
Serial.print("press =");
Serial.println("p.z");*/

//for setting button
if (p.x > 136 && p.x < 136+60 && p.y > 181-60 && p.y < 181){
  //
  sensor=3;
  setting();
}

if (p.x > 48 && p.x < 48+60 && p.y > 85-60 && p.y < 85){
  //
  sensor=2;
  setting();
}
if (p.x > 44 && p.x < 44+60 && p.y >293-60 && p.y < 293){
  //
 sensor=1;
 setting();
}

// Second screen where there are "training mode" and "sensor button"
//For Training Button
if (p.x > 120 && p.x < 120+50 && p.y > 250-50 && p.y < 250){
  //image dimension = tft.fillRoundRect(30,75,84,84,10,BLACKM);
   trainingbutt();
   graph();
    Serial.print("X=");
    Serial.println(p.x);
    Serial.print("Y=");
    Serial.println(p.y);
    Serial.print("press =");
    Serial.println("p.z");
    delay(100);
}
//For sensor button
if (p.x > 120 && p.x < 120+50 && p.y >113-50 && p.y < 113){
  //image dimension = tft.fillRoundRect(200,75,84,84,10,BLACKM);
    sensorbutton();
    sense();
    //selectsensor();
    Serial.print("X=");
    Serial.println(p.x);
    Serial.print("Y=");
    Serial.println(p.y);
    Serial.print("press =");
    Serial.println("p.z");
    delay(100);
}

// Graph screen
//Back button Calibration
if (p.x > 10 && p.x < 10+5 && p.y > 275-5 && p.y < 275){
  //image dimension = tft.fillTriangle(15,45 ,35,32 ,35,58, GREEN);
  backbutton();
  //setting();
setting();
count=0;
    Serial.print("X=");
    Serial.println(p.x);
    Serial.print("Y=");
    Serial.println(p.y);
    Serial.print("press =");
    Serial.println("p.z");
    delay(100);
}
// For Delete buttonCalibration
if (p.x > 108 && p.x < 108+5 && p.y > 273-5 && p.y < 273){
  //image dimension = tft.fillRoundRect(10,80,35,35,5,BLUE);
count=0;
deletecount();
graph();
    Serial.print("X=");
    Serial.println(p.x);
    Serial.print("Y=");
    Serial.println(p.y);
    Serial.print("press =");
    Serial.println("p.z");
    delay(100);
}

//Run button Calibration
if (p.x > 156 && p.x < 156+35 && p.y > 273-35 && p.y < 273){
  //image dimension = tft.fillTriangle(40,146.5 ,20,133 ,20,160, BLUE);
  runbutton();
  runmode();
 algorithm();
     Serial.print("X=");
    Serial.println(p.x);
    Serial.print("Y=");
    Serial.println(p.y);
    Serial.print("press =");
    Serial.println("p.z");
    delay(100);
}

if (p.x > 208 && p.x < 208+40 && p.y > 179-40 && p.y < 179){
  // image dimension = 
  drawselectbuttonpressed();

  count=count+1;
  
  if(count<13){
    
  read[count][0]=u;
  read[count][1]=q;
  read[count][2]=t;

  }
   tft.fillRect(read[count][2],read[count][1],22,15,GREEN);
  delay(100);
}


if (p.x > 212 && p.x < 212+30 && p.y >267-30 && p.y < 267){
  drawtriangle1();
  
  run();
  u=u-1;

}
if (p.x > 204 && p.x < 204 +30  && p.y > 52-30 && p.y < 52){
  drawtriangle2();
  
   run();
  u=u+1;
 
 
}
}
}
void runmode(){
   tft.setRotation(1);
  tft.fillScreen(CYAN);
tft.drawLine(81,5,81,178,BLACK);
tft.drawLine(81,177,315,177,BLACK);
  button();
  drawgraph();
  runbox();
  deletebox();
  backbox();
  sensorname(); 
  }
int  algorithm(){
int mapp;
int y;
int l;
int mini=10000,
analog=analogRead(A5);
mapp=map(analog,0,1023,1,9);
y=159-19*(mapp-1);
  switch (sensor)
  {
  case 1:
  analog=analogRead(A5);
 
  mapp=map(analog,0,550,1,9);
   y=159-19*(mapp-1);
   //Serial.println(value);
    break;
  case 2:
  analog=analogRead(A5);
  mapp=map(analog,265,395,1,9);
   y=159-19*(mapp-1);
   //Serial.println(mapp);
     break;
  case 3:
  analog=analogRead(A5);
  mapp=map(analog,0,600,1,9);
   y=159-19*(mapp-1);
   
     break;
  default:
analog=analogRead(A5);
  mapp=map(analog,265,395,1,9);
   y=159-19*(mapp-1);
    break;
  }

for(int i=1; i<=count;i++){
tft.fillRect(read[i][2],read[i][1],22,15,RED);

int neardis=abs(y-read[i][1]);
if (neardis<mini){
   mini=neardis;
   l=read[i][0];

}


/*if (y==read[i][1] ){
  l=read[i][0];
}*/


}
servo_pin.write(l*20);
delay(100);
digitalWrite(13,HIGH);            // touch code 
 TSPoint p= ts.getPoint();
 digitalWrite(13,LOW);


pinMode(XM,OUTPUT);
pinMode(YP,OUTPUT);
p.x = map(p.x, TS_MINX, TS_MAXX, 0,tft.height());
  p.y = map(p.y, TS_MINY, TS_MAXY, 0, tft.width());
 
  int y_set = map(p.x, 0, 240, 0, tft.height());
  int x_set = map(tft.width() - p.y, 0, 320, 0, tft.width());
if (p.z >MINPRESSURE && p.z< MAXPRESSURE) {
if (p.x > 46 && p.x < 72 && p.y > 253 && p.y < 266){
  
}
}
else{
  algorithm();
}

}
void run(){

  int z=84;
  switch (sensor)
  {
  case 1:
  analog=analogRead(A5);
  value=map(analog,0,550,1,9);
   q=159-19*(value-1);
   Serial.println(value);
    break;
  case 2:
  analog=analogRead(A5);
  value=map(analog,265,395,1,9);
   q=159-19*(value-1);
   Serial.print("tilt=");
   Serial.println(value);
   Serial.print("analog=");
   Serial.println(analog);
   
     break;
  case 3:
  analog=analogRead(A5);
  value=map(analog,0,600,1,9);
   q=159-19*(value-1);
   
     break;
  default:
  analog=analogRead(A5);
  value=map(analog,265,395,1,9);
   q=159-19*(value-1);
   Serial.print("tilt=");

    break;
  }
  
   if(u==1){
    t=z;
    tft.fillRect(t, q, 22,15,BLACKM);
   servo_pin.write(20*u);
   
  }
  else
  {
     tft.fillRect(z, q, 22,15,WHITE);
  }
  if(u==2){
    t=z+26;
    tft.fillRect(t, q, 22,15,BLACKM);
   servo_pin.write(20*u);
  }
  else
  {
     tft.fillRect(z+26, q, 22,15,WHITE);
  }
    if(u==3){
    t=z+26*2;
    tft.fillRect(t, q, 22,15,BLACKM);
servo_pin.write(20*u);  
  }
else
  {
     tft.fillRect(z+26*2, q, 22,15,WHITE);
  }  
  if(u==4){
    t=z+26*3;
    tft.fillRect(t, q, 22,15,BLACKM);
   servo_pin.write(20*u);


  }
  else
  {
     tft.fillRect(z+26*3, q, 22,15,WHITE);
  }
    if(u==5){
      t=z+26*4;
    tft.fillRect(t, q, 22,15,BLACKM);
   
   servo_pin.write(20*u);
  }
  else
  {
     tft.fillRect(z+26*4, q, 22,15,WHITE);
  }
  if(u==6){
    t=z+26*5;
    tft.fillRect(t, q, 22,15,BLACKM);
    servo_pin.write(20*u);
  }
  else
  {
     tft.fillRect(z+26*5, q, 22,15,WHITE);
  }
  if(u==7){
    t=z+26*6;
    tft.fillRect(t, q , 22,15,BLACKM);
    servo_pin.write(20*u);

  }

  else
  {
     tft.fillRect(z+26*6, q, 22,15,WHITE);
  }
  if(u==8){
    t=z+26*7;
    tft.fillRect(t, q, 22,15,BLACKM);
    servo_pin.write(20*u);
  } 
  else
  {
     tft.fillRect(z+26*7, q, 22,15,WHITE);
  } 
    if(u==9){
      t=z+26*8;
    tft.fillRect(t, q, 22,15,BLACKM);
    servo_pin.write(20*u);
  } 
  else
  {
     tft.fillRect(z+26*8, q, 22,15,WHITE);
  } 
  tft.fillRect(t, q, 22,15,BLACK);
  delay(500);
  tft.fillRect(t, q, 22,15,WHITE);

  if(u>9){               //bug 
    u=1;
  }
else if (u<1){
  u=9;
}
}


 
